---
// Clean hero section
---

<section id="home" class="min-h-screen flex items-center justify-center py-20">
  <div class="container text-center">
    <!-- Main title with Permanent Marker font -->
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-bold mb-8 permanent-marker">
      <span class="gradient-text">
        JXX<br>DESIGN
      </span>
    </h1>
    
    <!-- Subtitle -->
    <p class="text-xl md:text-2xl text-gray-600 mb-12 max-w-2xl mx-auto">
      Graffiti Artist & Visual Creator
    </p>
    
    <!-- Social links -->
    <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-6">
      <a href="https://instagram.com/jxx_design" target="_blank" 
         class="btn btn-primary px-6 py-3 sm:px-8 sm:py-4 text-base sm:text-lg">
        @JXX_DESIGN
      </a>
      <a href="mailto:jxx.design@gmx.de" 
         class="btn btn-secondary px-6 py-3 sm:px-8 sm:py-4 text-base sm:text-lg">
        Email Me
      </a>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-gray-400">
      <svg class="w-6 h-6 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  .animate-bounce {
    animation: bounce 2s infinite;
  }
</style>