---
// Clean contact section
---

<section id="contact" class="py-20 bg-gray-50">
  <div class="container">
    <div class="max-w-4xl mx-auto">
      <!-- Section title -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Let's Create Together</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Ready to commission a piece or have questions about my work? I'd love to hear from you.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact info -->
        <div class="space-y-8">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Get in Touch</h3>
            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-gradient-to-r from-pink-500 to-purple-600 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Email</p>
                  <a href="mailto:jxx.design@gmx.de" class="text-gray-600 hover:text-gray-900 transition-colors duration-300">
                    jxx.design@gmx.de
                  </a>
                </div>
              </div>
              
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-cyan-600 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Instagram</p>
                  <a href="https://instagram.com/jxx_design" target="_blank" class="text-gray-600 hover:text-gray-900 transition-colors duration-300">
                    @jxx_design
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Services -->
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Services</h3>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                <h4 class="font-medium text-gray-900 mb-1">Custom Murals</h4>
                <p class="text-sm text-gray-600">Large-scale wall art</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                <h4 class="font-medium text-gray-900 mb-1">Canvas Work</h4>
                <p class="text-sm text-gray-600">Original paintings</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                <h4 class="font-medium text-gray-900 mb-1">Commissions</h4>
                <p class="text-sm text-gray-600">Custom artwork</p>
              </div>
              <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
                <h4 class="font-medium text-gray-900 mb-1">Design Work</h4>
                <p class="text-sm text-gray-600">Visual identity</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact form -->
        <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-200">
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Send a Message</h3>
          
          <form id="main-contact-form" class="space-y-4">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="main-name" class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
                <input type="text" id="main-name" name="name" required 
                       class="form-input" placeholder="Your full name">
              </div>
              
              <div>
                <label for="main-email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                <input type="email" id="main-email" name="email" required 
                       class="form-input" placeholder="your@email.com">
              </div>
            </div>
            
            <div>
              <label for="main-subject" class="block text-sm font-medium text-gray-700 mb-1">Subject *</label>
              <input type="text" id="main-subject" name="subject" required 
                     class="form-input" placeholder="Please provide the productname / id for the image in which you are interested.">
            </div>
            
            <div>
              <label for="main-message" class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
              <textarea id="main-message" name="message" rows="4" required 
                        class="form-input" placeholder="Tell me about your project or question..."></textarea>
            </div>
            
            <button type="submit" class="btn btn-primary w-full py-3">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mainContactForm = document.getElementById('main-contact-form');
    
    mainContactForm?.addEventListener('submit', handleMainFormSubmit);
  });
  
  async function handleMainFormSubmit(e) {
    e.preventDefault();
    
    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalText = submitBtn.textContent;
    
    // Show loading state
    submitBtn.textContent = 'Sending...';
    submitBtn.disabled = true;
    
    try {
      const formData = new FormData(e.target);
      const templateParams = {
        name: formData.get('name'),
        email: formData.get('email'),
        subject: formData.get('subject') || 'General Inquiry from JXX Design Website',
        message: formData.get('message'),
        to_email: 'jxx.design@gmx.de'
      };
      
      // TODO: Replace with actual EmailJS implementation
      console.log('Main form submission:', templateParams);
      
      // Simulate API call
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      // Show success message
      submitBtn.textContent = 'Sent Successfully!';
      submitBtn.classList.remove('btn-primary');
      submitBtn.classList.add('bg-green-600');
      
      // Reset form after delay
      setTimeout(() => {
        e.target.reset();
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
        submitBtn.classList.add('btn-primary');
        submitBtn.classList.remove('bg-green-600');
      }, 2000);
      
    } catch (error) {
      console.error('Main form submission error:', error);
      
      // Show error message
      submitBtn.textContent = 'Error - Try Again';
      submitBtn.classList.remove('btn-primary');
      submitBtn.classList.add('bg-red-600');
      
      setTimeout(() => {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
        submitBtn.classList.add('btn-primary');
        submitBtn.classList.remove('bg-red-600');
      }, 2000);
    }
  }
</script>