---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "JXX Design - Graffiti Artist Portfolio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap" rel="stylesheet">
    <style>
      /* Custom animations and effects */
      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
      }
      
      @keyframes pulse-glow {
        0%, 100% { box-shadow: 0 0 20px rgba(255, 0, 128, 0.5); }
        50% { box-shadow: 0 0 40px rgba(0, 255, 255, 0.8); }
      }
      
      @keyframes spray-paint {
        0% { opacity: 0; transform: scale(0.8) rotate(-5deg); }
        50% { opacity: 0.8; transform: scale(1.1) rotate(2deg); }
        100% { opacity: 1; transform: scale(1) rotate(0deg); }
      }
      
      .float-animation {
        animation: float 3s ease-in-out infinite;
      }
      
      .glow-effect {
        animation: pulse-glow 2s ease-in-out infinite;
      }
      
      .spray-effect {
        animation: spray-paint 0.6s ease-out;
      }
      
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 12px;
      }
      
      ::-webkit-scrollbar-track {
        background: linear-gradient(180deg, #ff0080, #00ffff);
      }
      
      ::-webkit-scrollbar-thumb {
        background: linear-gradient(180deg, #ffff00, #ff4000);
        border-radius: 6px;
      }
      
      /* Graffiti text shadow effects */
      .graffiti-shadow {
        text-shadow: 3px 3px 0px #000, 
                     6px 6px 0px rgba(255, 0, 128, 0.5),
                     9px 9px 0px rgba(0, 255, 255, 0.3);
      }
      
      /* Kelsi font for main title only - using Permanent Marker */
      .title-font {
        font-family: 'Permanent Marker', cursive;
        font-weight: 400;
      }
    </style>
  </head>
  <body class="bg-gradient-to-br from-gray-800 via-gray-700 to-gray-900 min-h-screen">
    <slot />
  </body>
</html>