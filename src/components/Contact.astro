---
// Contact section component
---

<section id="contact" class="py-20 px-4 relative">
  <div class="max-w-4xl mx-auto relative z-10">
    <!-- Section title -->
    <h2 class="text-5xl md:text-7xl font-bold text-center mb-16 graffiti-shadow">
      <span class="bg-gradient-to-r from-green-400 via-blue-500 to-purple-600 bg-clip-text text-transparent font-['Bangers']">
        LET'S CREATE
      </span>
    </h2>
    
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact info -->
      <div class="space-y-8">
        <div class="bg-gray-800/60 backdrop-blur-sm rounded-2xl p-8 border border-gray-600 hover:border-pink-500 transition-all duration-300">
          <h3 class="text-2xl font-bold text-yellow-400 mb-4 font-['Permanent_Marker']">
            Ready to collaborate?
          </h3>
          <p class="text-gray-200 text-lg leading-relaxed mb-6">
            Whether you're looking for a custom mural, canvas commission, or just want to chat about art, 
            I'm always excited to work on new projects!
          </p>
          
          <!-- Contact methods -->
          <div class="space-y-4">
            <a href="mailto:jxx.design@gmail.com" 
               class="flex items-center space-x-4 bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 
                      text-white p-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg group">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:rotate-12 transition-transform duration-300">
                ‚úâÔ∏è
              </div>
              <div>
                <div class="font-bold font-['Bangers'] text-lg">EMAIL ME</div>
                <div class="text-sm opacity-90">jxx.design@gmail.com</div>
              </div>
            </a>
            
            <a href="https://instagram.com/jxx_design" target="_blank"
               class="flex items-center space-x-4 bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 
                      text-white p-4 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg group">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center group-hover:rotate-12 transition-transform duration-300">
                üì∏
              </div>
              <div>
                <div class="font-bold font-['Bangers'] text-lg">FOLLOW ON INSTA</div>
                <div class="text-sm opacity-90">@jxx_design</div>
              </div>
            </a>
          </div>
        </div>
        
        <!-- Services -->
        <div class="bg-gray-800/60 backdrop-blur-sm rounded-2xl p-8 border border-gray-600">
          <h3 class="text-2xl font-bold text-cyan-400 mb-4 font-['Permanent_Marker']">
            What I Do
          </h3>
          <div class="grid grid-cols-2 gap-3">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 p-3 rounded-lg text-center">
              <div class="font-bold text-white font-['Bangers']">MURALS</div>
            </div>
            <div class="bg-gradient-to-r from-green-600 to-blue-600 p-3 rounded-lg text-center">
              <div class="font-bold text-white font-['Bangers']">CANVAS</div>
            </div>
            <div class="bg-gradient-to-r from-yellow-600 to-orange-600 p-3 rounded-lg text-center">
              <div class="font-bold text-black font-['Bangers']">COMMISSIONS</div>
            </div>
            <div class="bg-gradient-to-r from-pink-600 to-red-600 p-3 rounded-lg text-center">
              <div class="font-bold text-white font-['Bangers']">DESIGN</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact form -->
      <div class="bg-gray-800/60 backdrop-blur-sm rounded-2xl p-8 border border-gray-600">
        <h3 class="text-2xl font-bold text-pink-400 mb-6 font-['Permanent_Marker']">
          Send Me a Message
        </h3>
        
        <form class="space-y-4" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
          <div>
            <input type="text" name="name" placeholder="Your Name" required
                   class="w-full p-4 bg-gray-700/50 border border-gray-600 rounded-lg text-white 
                          placeholder-gray-400 focus:border-pink-500 focus:outline-none transition-colors duration-300">
          </div>
          
          <div>
            <input type="email" name="email" placeholder="Your Email" required
                   class="w-full p-4 bg-gray-700/50 border border-gray-600 rounded-lg text-white 
                          placeholder-gray-400 focus:border-cyan-500 focus:outline-none transition-colors duration-300">
          </div>
          
          <div>
            <textarea name="message" placeholder="Tell me about your project..." rows="4" required
                      class="w-full p-4 bg-gray-700/50 border border-gray-600 rounded-lg text-white 
                             placeholder-gray-400 focus:border-purple-500 focus:outline-none transition-colors duration-300 resize-none"></textarea>
          </div>
          
          <!-- Hidden field to specify recipient -->
          <input type="hidden" name="_to" value="jxx.design@gmail.com">
          <input type="hidden" name="_subject" value="New message from JXX Design website">
          <input type="hidden" name="_next" value="thank-you">
          
          <button type="submit" 
                  class="w-full bg-gradient-to-r from-pink-500 via-purple-500 to-cyan-500 
                         hover:from-pink-600 hover:via-purple-600 hover:to-cyan-600 
                         text-white font-bold py-4 px-8 rounded-lg transition-all duration-300 
                         transform hover:scale-105 shadow-lg hover:shadow-2xl font-['Bangers'] text-lg">
            SEND MESSAGE üé®
          </button>
        </form>
      </div>
    </div>
  </div>
</section>