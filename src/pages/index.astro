    </div>
  </section>
  
  <!-- About Section -->
  <About />
  
  <!-- Contact Section -->
  <Contact />
  
  <!-- Footer -->
  <footer class="bg-gray-900 py-12 px-4 border-t border-gray-800">
    <div class="max-w-4xl mx-auto text-center">
      <div class="flex justify-center space-x-8 mb-8">
        <a href="https://instagram.com/jxx_design" target="_blank" 
           class="text-pink-400 hover:text-pink-300 transition-colors duration-300 text-2xl">
          üì∏ @jxx_design
        </a>
        <a href="mailto:jxx.design@gmail.com" 
           class="text-cyan-400 hover:text-cyan-300 transition-colors duration-300 text-2xl">
          ‚úâÔ∏è Email
        </a>
      </div>
      
      <div class="text-gray-400 space-y-2">
        <p class="font-['Bangers'] text-lg">
          ¬© 2024 JXX DESIGN - ALL RIGHTS RESERVED
        </p>
        <p class="text-sm">
          Street art ‚Ä¢ Murals ‚Ä¢ Canvas work ‚Ä¢ Commissions
        </p>
      </div>
      
      <!-- Animated spray cans in footer -->
      <div class="flex justify-center space-x-4 mt-8">
        <div class="w-4 h-8 bg-gradient-to-t from-pink-500 to-purple-500 rounded-full opacity-60 float-animation"></div>
        <div class="w-4 h-8 bg-gradient-to-t from-cyan-500 to-blue-500 rounded-full opacity-60 float-animation" style="animation-delay: 0.5s;"></div>
        <div class="w-4 h-8 bg-gradient-to-t from-yellow-500 to-orange-500 rounded-full opacity-60 float-animation" style="animation-delay: 1s;"></div>
        <div class="w-4 h-8 bg-gradient-to-t from-green-500 to-cyan-500 rounded-full opacity-60 float-animation" style="animation-delay: 1.5s;"></div>
      </div>
    </div>
  </footer>
  
  <!-- Smooth scroll behavior -->
  <script>
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Add scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('spray-effect');
        }
      });
    }, observerOptions);
    
    // Observe all artwork cards
    document.querySelectorAll('.group').forEach(card => {
      observer.observe(card);
    });
  </script>
</Layout>