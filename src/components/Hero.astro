---
// Hero section component
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-32 h-32 bg-gradient-to-r from-pink-500 to-yellow-500 rounded-full opacity-20 float-animation"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-gradient-to-r from-cyan-500 to-green-500 rounded-full opacity-30 float-animation" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-32 left-1/4 w-40 h-40 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full opacity-15 float-animation" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 right-1/3 w-28 h-28 bg-gradient-to-r from-orange-500 to-red-500 rounded-full opacity-25 float-animation" style="animation-delay: 0.5s;"></div>
  </div>
  
  <!-- Main content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <!-- Artist name with graffiti style -->
    <h1 class="text-6xl md:text-8xl lg:text-9xl font-black mb-8 spray-effect">
      <span class="bg-gradient-to-r from-pink-500 via-yellow-500 to-cyan-500 bg-clip-text text-transparent graffiti-shadow font-['Bangers']">
        JXX
      </span>
      <br>
      <span class="bg-gradient-to-r from-green-400 via-blue-500 to-purple-600 bg-clip-text text-transparent graffiti-shadow font-['Bangers']">
        DESIGN
      </span>
    </h1>
    
    <!-- Subtitle -->
    <p class="text-2xl md:text-3xl lg:text-4xl font-bold mb-8 neon-glow text-yellow-400 font-['Permanent_Marker']">
      GRAFFITI ARTIST & VISUAL CREATOR
    </p>
    
    <!-- Spray can icons -->
    <div class="flex justify-center space-x-8 mb-12">
      <div class="w-8 h-16 bg-gradient-to-t from-red-500 to-pink-500 rounded-full glow-effect"></div>
      <div class="w-8 h-16 bg-gradient-to-t from-blue-500 to-cyan-500 rounded-full glow-effect" style="animation-delay: 0.5s;"></div>
      <div class="w-8 h-16 bg-gradient-to-t from-green-500 to-yellow-500 rounded-full glow-effect" style="animation-delay: 1s;"></div>
    </div>
    
    <!-- Social links -->
    <div class="flex justify-center space-x-8">
      <a href="https://instagram.com/jxx_design" target="_blank" 
         class="bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 
                text-white px-8 py-4 rounded-full font-bold text-lg transform hover:scale-110 
                transition-all duration-300 shadow-lg hover:shadow-2xl glow-effect font-['Bangers']">
        @JXX_DESIGN
      </a>
      <a href="mailto:jxx.design@gmail.com" 
         class="bg-gradient-to-r from-green-500 to-blue-600 hover:from-green-600 hover:to-blue-700 
                text-white px-8 py-4 rounded-full font-bold text-lg transform hover:scale-110 
                transition-all duration-300 shadow-lg hover:shadow-2xl glow-effect font-['Bangers']">
        EMAIL ME
      </a>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-1 h-16 bg-gradient-to-b from-transparent via-yellow-400 to-pink-500 rounded-full"></div>
  </div>
</section>