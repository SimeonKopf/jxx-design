---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import SeriesCarousel from '../components/SeriesCarousel.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import { series } from '../data/series.js';
---

<Layout title="JXX Design - Graffiti Artist Portfolio">
  <!-- Navigation Menu -->
  <Navigation />
  
  <!-- Hero Section -->
  <Hero />
  
  <!-- Artworks Series Section -->
  <section id="artworks" class="py-20">
    <div class="container">
      <!-- Section title -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">My Artworks</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          A collection of contemporary works exploring urban culture and artistic expression, organized in thematic series
        </p>
      </div>
      
      <!-- Series Carousels -->
      <div class="space-y-20">
        {series.map((seriesItem, index) => (
          <SeriesCarousel 
            series={seriesItem} 
            imageLeft={index % 2 === 1}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <About />
  
  <!-- Contact Section -->
  <Contact />
</Layout>