---
export interface Props {
  id: string;
  title: string;
  dimensions: string;
  medium: string;
  year: string;
  price?: string;
  sold?: boolean;
  image: string;
}

const { 
  id,
  title, 
  dimensions, 
  medium, 
  year, 
  price,
  sold = false, 
  image
} = Astro.props;
---

<a href={`/artwork/${id}`} class="artwork-card group block">
  <!-- Image -->
  <div class="relative overflow-hidden bg-gray-50 mb-3 rounded-lg">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-64 sm:h-80 object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
    
    <!-- Sold overlay -->
    {sold && (
      <div class="absolute inset-0 bg-black/60 flex items-center justify-center">
        <div class="bg-white text-gray-900 px-4 py-2 rounded-full text-sm font-medium">
          Sold
        </div>
      </div>
    )}
    
    <!-- Hover overlay -->
    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
  </div>
  
  <!-- Minimal text info -->
  <div class="space-y-1">
    <h3 class="text-sm font-medium text-gray-900 group-hover:text-gray-700 transition-colors duration-300">
      {title}
    </h3>
    
    <div class="text-xs text-gray-500 space-y-0.5">
      <p>{year}</p>
      <p>{dimensions}</p>
      {!sold && price && (
        <p class="text-gray-700 font-medium">{price}</p>
      )}
    </div>
  </div>
</a>

<style>
  .artwork-card {
    transition: all 0.3s ease;
  }
  
  .artwork-card:hover {
    transform: translateY(-2px);
  }
</style>